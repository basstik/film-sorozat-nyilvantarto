<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MoviePU" transaction-type="JTA">
    <jta-data-source>jdbc/movie</jta-data-source>
    <class>xyz.codingmentor.entity.Actor</class>
    <class>xyz.codingmentor.entity.Comment</class>
    <class>xyz.codingmentor.entity.Director</class>
    <class>xyz.codingmentor.entity.Episode</class>
    <class>xyz.codingmentor.entity.Movie</class>
    <class>xyz.codingmentor.entity.Season</class>
    <class>xyz.codingmentor.entity.Series</class>
    <class>xyz.codingmentor.entity.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/moviesite"/>
      <property name="javax.persistence.jdbc.user" value="csoport1"/>
      <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
      <property name="javax.persistence.jdbc.password" value="csoport1"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
